<!DOCTYPE html>
<html>

  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
	<%= render 'layouts/stylesheets' %>
  </head>

  <body>
    <div class="container">
      <%= render 'layouts/header' %>

      <section class="round">

		<% flash.each do |key, value| %>
         	<!-- Content helper is ruby helper for a DIV block (type, contents, other parameters) -->
			 <%= content_tag(:div, value, :class => "flash #{key}") %>
       	<% end %>

        <%= yield %>
      </section>

	  <%= render 'layouts/footer' %>
<!--helpful debug comments -->
	 <%= debug(params) if Rails.env.development? %>
    </div>
  </body>

</html>