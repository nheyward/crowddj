<table>

<tr>
<td>
	<h2>Profile for <%= @user.name %>:</h2>
	<% unless @user.venues.empty? %>
		<table><%= render @venues %></table>
	<% end %>
</td>

<td>
  <b>Name:</b>
  <%= @user.name %>
  <b>Email:</b>
  <%= @user.email %><br/>
	<% if current_user == @user %>
		<%= link_to 'Edit Profile', edit_user_path(@user) %>
	<% end %>
</td>
</tr>

</table>


<% if current_user == @user %>
	<%= link_to 'Create Venue', new_venue_path %>
<% end %>