<h1>Listing venues</h1>

<% form_tag venues_path, :method => 'get' do %>
  <p>
	<%= label_tag :search, 'Search for a venue' %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<% if params[:search].present? %>
<p>Results matching "<%= params[:search] %>": <%= link_to "(Clear Search)", venues_path %></p>
<% end %>


<%= gmaps4rails(@json) %>
<br />
<%= will_paginate %>
<table>
	<%= render @venues %>
</table>
<%= will_paginate %>
<br />

<%= link_to 'New Venue', new_venue_path %>
